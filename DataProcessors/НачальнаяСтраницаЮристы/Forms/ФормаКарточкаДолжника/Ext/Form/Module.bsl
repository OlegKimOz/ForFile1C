	// При повторном использовании конструктора, внесенные вручную изменения будут утеряны!!!
	
			Запрос = Новый Запрос;
			Запрос.Текст = 
				"ВЫБРАТЬ
				|	ДополнительныеДанные.Наименование КАК Наименование,
				|	ДополнительныеДанные.Реквизит КАК Реквизит
				|ИЗ
				|	Справочник.ДополнительныеДанные КАК ДополнительныеДанные
				|ГДЕ
				|	ДополнительныеДанные.Владелец = &Владелец
				|	И ДополнительныеДанные.Реквизит В(&Реквизит)";
			
			Запрос.УстановитьПараметр("Владелец", Должник);
			Запрос.УстановитьПараметр("Реквизит", массивСтр);
			
			РезультатЗапроса = Запрос.Выполнить();
			
			Выборка = РезультатЗапроса.Выбрать();
			
			Пока Выборка.Следующий() Цикл
				// Вставить обработку выборки ВыборкаДетальныеЗаписи
				Если Выборка.Реквизит=поручСтр Тогда
					    ФиоПоручитель=Выборка.Наименование;
				
				КонецЕсли;
				
				Если Выборка.Реквизит=поручДатаРождСтр Тогда
					    ДатаРожденияПоручитель=Выборка.Наименование;
				
				КонецЕсли;
				
				
				Если Выборка.Реквизит=должМестоРождСтр Тогда
					    ДолжникМестоРождения=Выборка.Наименование;
				
				КонецЕсли;
				

				
				
				
			КонецЦикла;
			
