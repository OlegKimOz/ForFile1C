Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	  Если Параметры.Свойство("ДолжникПараметр") Тогда
         //обработка параметра
		    Должник=Параметры.ДолжникПараметр;

      КонецЕсли;

	     поручСтр=Справочники.ДополнительныеРеквизиты.НайтиПоНаименованию("Поручитель 1");
		 поручДатаРождСтр=Справочники.ДополнительныеРеквизиты.НайтиПоНаименованию("Поручитель/дата рождения");
		 
		 должМестоРождСтр=Справочники.ДополнительныеРеквизиты.НайтиПоНаименованию("Место рождения");
		 
		 
		 
	   массивСтр=Новый Массив;
	   массивСтр.Добавить(поручСтр);
	   массивСтр.Добавить(поручДатаРождСтр);
	   массивСтр.Добавить(должМестоРождСтр);
	   
	   
	   
	   
		 
	//{{КОНСТРУКТОР_ЗАПРОСА_С_ОБРАБОТКОЙ_РЕЗУЛЬТАТА
