		 ФильтрУстановлен=Истина;

	
	КонецЕсли;	
		
	ЭтаФорма.Закрыть();

	
	
КонецПроцедуры

&НаКлиенте
Процедура ПриЗакрытии(ЗавершениеРаботы)
	
	
	
	СписокПараметров = Новый Структура;
	
	СписокПараметров.Вставить("ДоговорЦессии", ДоговорЦессии);
	СписокПараметров.Вставить("НазваниеДокумента", НазваниеДокумента);
	СписокПараметров.Вставить("ПечататьКопияДоговораЦессии", ПечататьКопияДоговораЦессии);
	СписокПараметров.Вставить("ПечатьКопияРеестраУступаемыхПрав", ПечатьКопияРеестраУступаемыхПрав);
	СписокПараметров.Вставить("ПечататьСвидетельстваОРегистрацииЮрЛица", ПечататьСвидетельстваОРегистрацииЮрЛица);
	СписокПараметров.Вставить("ПечатьКопияПлатежногоПорученияПодтверждающееОплатуПоДоговоруУступкиПрав", ПечатьКопияПлатежногоПорученияПодтверждающееОплатуПоДоговоруУступкиПрав);
	СписокПараметров.Вставить("ПечатьДоверенностьПредставителя", ПечатьДоверенностьПредставителя);
	СписокПараметров.Вставить("ПечатьДосьеКлиента", ПечатьДосьеКлиента);
	СписокПараметров.Вставить("ПечатьКопииУчредительныхДокументовКомпании", ПечатьКопииУчредительныхДокументовКомпании);
	
	СписокПараметров.Вставить("ФильтрПечатьУстановлен", ФильтрУстановлен);
	
	
	СписокПараметров.Вставить("ПечатьКопияУведомленияОбУступкеПраваТребования", ПечатьКопияУведомленияОбУступкеПраваТребования);
	СписокПараметров.Вставить("ПечатьВыпискаИзРеестра",ПечатьВыпискаИзРеестра);
	
	СписокПараметров.Вставить("ПечатьНаименование",ПечатьНаименование);
	
	СписокПараметров.Вставить("АдресатСуд",АдресатСуд);
	СписокПараметров.Вставить("АдресатДолжник",АдресатДолжник);
	СписокПараметров.Вставить("АдресатБанк",АдресатБанк);
	
	
	
	ОповеститьОВыборе(СписокПараметров);

	
	
	
	
КонецПроцедуры

